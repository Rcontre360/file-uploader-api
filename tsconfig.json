{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@loaders/*": ["src/loaders/*"],
      "@services/*": ["src/services/*"],
      "@shared/*": ["src/shared/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
